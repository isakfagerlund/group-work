extends layout

block content
  .inner
    form.form(action=`/addDocuments` method="POST" enctype="multipart/form-data")
      h2= title
      .group     
        input(type="text" name="name" placeholder="Document Name" required)
        label(for="name")
          i.fas.fa-file-alt
      .group
        input(type="file" name="document" id="document" placeholder="Document file" accept="application/pdf,application/vnd.ms-excel" required)
        label(for="document") 
          i.fas.fa-file-pdf
      input.button(type="submit" value="Upload and save")
